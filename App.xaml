        <Style x:Key="WeatherItemLabelStyle">
            <Setter Property="Label.ToolTip">
                <Setter.Value>
                    <ToolTip Content="{Binding DisplayName}" Placement="Left" />
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <DataTrigger Binding="{Binding Valid}" Value="true">
                    <Setter Property="Label.Content" Value="{Binding DisplayValue}" />
                    <Setter Property="Label.Effect">
                        <Setter.Value>
                            <DropShadowEffect ShadowDepth="0" Color="{Binding Condition, Converter={local:WeatherConditionConverter}}" BlurRadius="10" Direction="0"/>
                        </Setter.Value>
                    </Setter>
                </DataTrigger>
                <DataTrigger Binding="{Binding Valid}" Value="false">
                    <Setter Property="Label.Content" Value="{x:Static properties:Resources.notavailable}" />
                </DataTrigger>
            </Style.Triggers>
        </Style>

        <DataTemplate x:Key="WeatherItemTemplate" DataType="local:WeatherItem">
            <StackPanel Orientation="Horizontal">
                <Viewbox>
                    <ContentPresenter Content="{Binding IconKey, Converter={local:StaticResourceConverter}}" />
                </Viewbox>
                <Label Style="{StaticResource WeatherItemLabelStyle}" />
            </StackPanel>
        </DataTemplate>

